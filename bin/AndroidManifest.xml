<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.drinkorder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

<uses-permission android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.drinkorder.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.drinkorder.activity.DrinkOrderActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.example.drinkorder.activity.SignInActivity"
            android:label="@string/app_name" />
         <activity
            android:name="com.example.drinkorder.activity.OrderReviewActivity"
            android:label="@string/app_name" />       
         <activity
            android:name="com.example.drinkorder.activity.OrderConfirmationActivity"
            android:label="@string/app_name" />               
        
        
    </application>

</manifest>