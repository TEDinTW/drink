<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="dialogInputCaption" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#000080</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">25px</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>    
    
    <style name="inputCaption" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#000080</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">36px</item>
        <item name="android:paddingRight">5sp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="inputField" >
        <item name="android:textColor">#808080</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">36px</item>
        <item name="android:paddingRight">2sp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>